<div class="relative h-[50vh] w-full pt-[56px] lg:h-[460px]">
  <!-- 상단 배너 이미지 -->
  <div
    class="bg- absolute inset-0 -z-10 h-full w-full bg-[url('/images/banner-services.webp')] bg-cover bg-fixed bg-center"
  >
    <div class="absolute inset-0 h-full w-full bg-black opacity-50"></div>
  </div>
  <div class="m-auto h-full w-full max-w-[1280px] px-10">
    <div class="flex h-full flex-col items-center justify-center gap-8 py-20">
      <p class="mb-2 text-center break-keep text-white">
        <span class="text-2xl lg:text-[48px]">
          <strong><%=routes.services.title%></strong>
        </span>
      </p>
      <p class="text-center font-['Oswald'] text-base break-keep text-white lg:text-xl">
        <span>"Practice Areas"</span>
      </p>
    </div>
  </div>
</div>

<!-- 업무분야 -->
<% if (data.midBanner.length !== 0) { %>
<div class="w-full">
  <div
    class="m-auto flex w-full max-w-[1280px] flex-none flex-col gap-14 px-4 py-10 lg:flex-row lg:px-10 lg:py-20"
  >
    <div class="grid w-full grid-cols-1 gap-x-2 gap-y-5 lg:grid-cols-3">
    <% if (data.midBanner.forEach((banner, index) => { %>
      <div
        class="relative h-[475px] cursor-pointer lg:h-[750px]"
      >
        <div class="absolute inset-0 -z-10">
          <div class="absolute inset-0 bg-black opacity-50"></div>
          <img class="relative h-full w-full -z-10 object-cover" src="<%=banner.imagePath%>" alt="<%=banner.description%>" />
        </div>
        <div class="relative z-10 flex h-full w-full flex-col justify-between p-8">
          <div class="flex items-center justify-between">
            <div class="mr-10 w-full border-2 border-b border-white"></div>
            <p class="font-['Oswald'] text-3xl font-semibold text-white"><%=String(index + 1).padStart(2, '0')%></p>
          </div>
          <p class="w-[50%] text-3xl font-semibold text-wrap break-keep text-white"><%=banner.title%></p>
        </div>
      </div>
    <% })) %>
    </div>
  </div>
</div>
<% } %>
