<header
  class="mb-4 flex h-16 w-full items-center justify-between rounded-xl bg-white px-6 py-2 shadow-[0_2px_30px_rgba(0,0,0,.06)] lg:hidden dark:bg-gray-700"
>
  <!-- 로고 -->
  <a href="<%=backendRoutes.index.url%>">
    <div class="flex items-center justify-center gap-1.5">
      <span class="text-slate-700">
        <img src="<%=settings.companyInfo.logo%>" alt="<%=settings.companyInfo.name%>" class="h-6 w-6" />
      </span>
      <span class="text-2xl font-bold text-slate-700"><%=settings.companyInfo.name.toUpperCase()%></span>
    </div>
  </a>
  <!-- 햄버거 버튼 -->
  <button id="menu-toggle" class="focus:outline-none lg:hidden" aria-label="Toggle Menu">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 24 24"
      stroke-width="2"
      stroke="currentColor"
      class="h-6 w-6"
    >
      <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16m-7 6h7" />
    </svg>
  </button>
</header>
