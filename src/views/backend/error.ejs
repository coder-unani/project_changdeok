<div class="flex-grow flex w-full h-full items-center justify-center">
  <div class="bg-white p-4 rounded-lg shadow-md w-96">
    <div class="block mb-4 mx-auto border-b border-slate-300 pb-2 max-w-[360px]">
      <h1 class='flex justify-center items-center gap-1.5 px-4 py-2 text-center text-slate-700 transition-all'>
        <span class="font-bold"><%= typeof title !== 'undefined' ? title : 'ERROR' %></span>
      </h1>
    </div>
    <div>
      <h2 class="w-full text-center p-4"><%= typeof message !== 'undefined' ? message : '알 수 없는 오류가 발생했습니다.' %></h2>
      <div class="text-center p-4">
        <button onclick="window.history.back()" class="px-4 py-2 text-white bg-slate-700 rounded-md hover:bg-slate-800 focus:outline-none focus:ring-2 focus:ring-slate-600 focus:ring-opacity-50">뒤로가기</button>
      </div>
    </div>
  </div>
</div>