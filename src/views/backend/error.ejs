<div class="flex h-full w-full flex-grow items-center justify-center">
  <div class="bg-default-bg w-96 rounded-lg p-4 shadow-[0_2px_30px_rgba(0,0,0,.06)]">
    <div class="border-main-border mx-auto mb-4 block max-w-[360px] border-b pb-2">
      <h1 class="text-primary-dark flex items-center justify-center gap-1.5 px-4 py-2 text-center transition-all">
        <span class="font-bold"><%= typeof title !== 'undefined' ? title : 'ERROR' %></span>
      </h1>
    </div>
    <div>
      <h2 class="p-4 text-center">
        <%= typeof message !== 'undefined' ? message : '알 수 없는 오류가 발생했습니다.' %>
      </h2>
      <div class="p-4">
        <button class="orb-btn orb-btn-primary mx-auto">뒤로가기</button>
      </div>
    </div>
  </div>
</div>

<script nonce="<%=nonce%>">
  document.addEventListener('DOMContentLoaded', () => {
    const button = document.querySelector('button');
    button.addEventListener('click', () => {
      window.history.back();
    });
  });
</script>
