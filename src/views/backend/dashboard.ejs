<div class="my-2">
  <h1 class="flex justify-start items-center gap-1.5 py-2 text-center text-slate-700 transition-all"> 
    <span class="orb-head"><%=title%></span>
  </h1>
</div>

<div class="space-y-4 text-gray-700">
  <!-- 화면 관리 -->
  <div class="flex-none w-full space-y-4 text-sm bg-white p-4 lg:p-6 rounded-xl shadow-[0_2px_30px_rgba(0,0,0,.06)]">
    <div class="flex items-center">
      <div class="bg-emerald-100 text-emerald-500 rounded-md p-1 mr-2">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" fill="currentColor" class="h-[14px] w-[14px]">
          <path d="M0 128C0 92.7 28.7 64 64 64l384 0c35.3 0 64 28.7 64 64l0 256c0 35.3-28.7 64-64 64L64 448c-35.3 0-64-28.7-64-64L0 128zm64 32l0 64c0 17.7 14.3 32 32 32l320 0c17.7 0 32-14.3 32-32l0-64c0-17.7-14.3-32-32-32L96 128c-17.7 0-32 14.3-32 32zM80 320c-13.3 0-24 10.7-24 24s10.7 24 24 24l56 0c13.3 0 24-10.7 24-24s-10.7-24-24-24l-56 0zm136 0c-13.3 0-24 10.7-24 24s10.7 24 24 24l48 0c13.3 0 24-10.7 24-24s-10.7-24-24-24l-48 0z"/>
        </svg>
      </div>
      <p class="text-base font-semibold"><%=metadata.banners.title%></p>
    </div>
    <div class="flex flex-wrap flex-col lg:flex-row border border-border-2 rounded-lg">
      <% data.banners.forEach((banner) => { %>
        <div class="flex-1 min-w-[25%] not-last:border-b lg:not-last:border-b-0 lg:not-last:border-r lg:nth-[4n]:border-r-0 lg:nth-[n+5]:border-t border-border-2 p-4">
          <p class="text-sm font-medium text-gray-500 mb-2"><%=banner.title%> 배너</p>
          <div class="flex justify-end gap-x-3 font-semibold text-base">
            <p>
              <span>진행</span>
              <span class="text-blue-500"><%=banner.published%></span>
            </p>
            <p>
              <span>예약</span>
              <span class="text-amber-500"><%=banner.reserved%></span>
            </p>
            <p>
              <span>종료</span>
              <span class="text-gray-500"><%=banner.expired%></span>
            </p>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

  <!-- 게시판 관리 -->
  <div class="flex flex-col lg:flex-row gap-4">
    <% data.contents.forEach((content) => { %>
      <% if (content.title === '공지사항') { %>
      <div class="flex-1 space-y-4 text-sm bg-white p-4 lg:p-6 rounded-xl shadow-[0_2px_30px_rgba(0,0,0,.06)]">
        <div class="flex justify-between">
          <div class="flex items-center">
            <div class="bg-rose-100 text-rose-500 rounded-md p-1 mr-2">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 384 512" fill="currentColor" class="h-[14px] w-[14px]">
                <path d="M32 32C32 14.3 46.3 0 64 0L320 0c17.7 0 32 14.3 32 32s-14.3 32-32 32l-29.5 0 11.4 148.2c36.7 19.9 65.7 53.2 79.5 94.7l1 3c3.3 9.8 1.6 20.5-4.4 28.8s-15.7 13.3-26 13.3L32 352c-10.3 0-19.9-4.9-26-13.3s-7.7-19.1-4.4-28.8l1-3c13.8-41.5 42.8-74.8 79.5-94.7L93.5 64 64 64C46.3 64 32 49.7 32 32zM160 384l64 0 0 96c0 17.7-14.3 32-32 32s-32-14.3-32-32l0-96z"/>
              </svg>
            </div>
            <p class="text-base font-semibold"><%=content.title%></p>
          </div>
          <!-- TODO: 공지사항, 문의 더보기 경로 설정 확인 필요  -->
          <a href="/admin/contents/1" class="flex items-center text-sm text-gray-500 gap-0.5">
            <span>더보기</span>
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512" fill="currentColor" class="h-[10px] w-[10px]">
              <path d="M310.6 233.4c12.5 12.5 12.5 32.8 0 45.3l-192 192c-12.5 12.5-32.8 12.5-45.3 0s-12.5-32.8 0-45.3L242.7 256 73.4 86.6c-12.5-12.5-12.5-32.8 0-45.3s32.8-12.5 45.3 0l192 192z"/></svg>
          </a>
        </div>
        <!-- TODO: 게시물 최근 몇개 미리보기 확인 필요 -->
        <ul class="border-t border-b border-border-2">
          <li class="flex justify-between p-2 text-[13px] not-last:border-b border-border-2">
            <p class="flex-1">제목 1 입니다.</p>
            <span class="flex-none ml-2 text-gray-400">2025-03-14</span>
          </li>
          <li class="flex justify-between p-2 text-[13px] not-last:border-b border-border-2">
            <p class="flex-1">제목 2 입니다.</p>
            <span class="flex-none ml-2 text-gray-400">2025-03-13</span>
          </li>
          <li class="flex justify-between p-2 text-[13px] not-last:border-b border-border-2">
            <p class="flex-1">제목 3 입니다.</p>
            <span class="flex-none ml-2 text-gray-400">2025-03-12</span>
          </li>
        </ul>
      </div> 
      <% } else { %>
      <div class="flex-1 space-y-4 text-sm bg-white p-4 lg:p-6 rounded-xl shadow-[0_2px_30px_rgba(0,0,0,.06)]">
        <div class="flex justify-between">
          <div class="flex items-center">
            <div class="bg-blue-100 text-blue-500 rounded-md p-1 mr-2">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" fill="currentColor" class="h-[14px] w-[14px]">
                <path d="M256 512A256 256 0 1 0 256 0a256 256 0 1 0 0 512zM169.8 165.3c7.9-22.3 29.1-37.3 52.8-37.3l58.3 0c34.9 0 63.1 28.3 63.1 63.1c0 22.6-12.1 43.5-31.7 54.8L280 264.4c-.2 13-10.9 23.6-24 23.6c-13.3 0-24-10.7-24-24l0-13.5c0-8.6 4.6-16.5 12.1-20.8l44.3-25.4c4.7-2.7 7.6-7.7 7.6-13.1c0-8.4-6.8-15.1-15.1-15.1l-58.3 0c-3.4 0-6.4 2.1-7.5 5.3l-.4 1.2c-4.4 12.5-18.2 19-30.6 14.6s-19-18.2-14.6-30.6l.4-1.2zM224 352a32 32 0 1 1 64 0 32 32 0 1 1 -64 0z"/>
              </svg>
            </div>
            <p class="text-base font-semibold"><%=content.title%></p>
          </div>
          <a href="/admin/contents/2" class="flex items-center text-sm text-gray-500 gap-0.5">
            <span>더보기</span>
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512" fill="currentColor" class="h-[10px] w-[10px]">
              <path d="M310.6 233.4c12.5 12.5 12.5 32.8 0 45.3l-192 192c-12.5 12.5-32.8 12.5-45.3 0s-12.5-32.8 0-45.3L242.7 256 73.4 86.6c-12.5-12.5-12.5-32.8 0-45.3s32.8-12.5 45.3 0l192 192z"/></svg>
          </a>
        </div>
        <ul class="border-t border-b border-border-2">
          <li class="flex justify-between p-4 text-[13px] not-last:border-b border-border-2">
            <p class="flex-1 text-center text-gray-400">등록된 문의가 없습니다.</p>
          </li>
        </ul>
      </div>
      <% } %>
    <% }) %>
  </div>

  <!-- 사이트 관리 -->
  <div class="w-full lg:max-w-[calc(50%-8px)] space-y-4 text-sm bg-white p-4 lg:p-6 rounded-xl shadow-[0_2px_30px_rgba(0,0,0,.06)]">
    <div class="flex items-center">
      <div class="bg-violet-100 text-violet-500 rounded-md p-1 mr-2">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 512" fill="currentColor" class="h-[14px] w-[14px]">
          <path d="M96 128a128 128 0 1 1 256 0A128 128 0 1 1 96 128zM0 482.3C0 383.8 79.8 304 178.3 304l91.4 0C368.2 304 448 383.8 448 482.3c0 16.4-13.3 29.7-29.7 29.7L29.7 512C13.3 512 0 498.7 0 482.3zM609.3 512l-137.8 0c5.4-9.4 8.6-20.3 8.6-32l0-8c0-60.7-27.1-115.2-69.8-151.8c2.4-.1 4.7-.2 7.1-.2l61.4 0C567.8 320 640 392.2 640 481.3c0 17-13.8 30.7-30.7 30.7zM432 256c-31 0-59-12.6-79.3-32.9C372.4 196.5 384 163.6 384 128c0-26.8-6.6-52.1-18.3-74.3C384.3 40.1 407.2 32 432 32c61.9 0 112 50.1 112 112s-50.1 112-112 112z"/>
        </svg>
      </div>
      <p class="text-base font-semibold"><%=metadata.employees.title%></p>
    </div>
    <div class="flex flex-col lg:flex-row items-end justify-end gap-x-3 font-semibold text-base">
      <p><%=data.employees.count%>명</p>
    </div>
  </div>
</div>
