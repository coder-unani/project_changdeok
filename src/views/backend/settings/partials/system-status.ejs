<div id="system-status-container" class="rounded-xl bg-white p-4 text-sm shadow-[0_2px_30px_0_rgba(0,0,0,.06)] lg:p-6">
  <div class="mb-4 flex justify-between gap-2 lg:mb-6">
    <h3 class="text-base font-medium text-gray-600">시스템 상태</h3>

    <div class="flex items-center gap-2">
      <button id="refresh-system-status" class="orb-btn orb-btn-primary flex flex-none items-center gap-2">
        <%- include('../../common/icons/refresh') %> 새로고침
      </button>
      <button id="restart-server" class="orb-btn orb-btn-delete flex flex-none items-center gap-2">
        <%- include('../../common/icons/power') %> 재시작
      </button>
    </div>
  </div>

  <div class="overflow-x-auto">
    <table class="min-w-full table-auto">
      <thead>
        <tr>
          <th class="border-border-2 table-cell w-32 min-w-32 border-t border-b bg-gray-100 px-4 py-3 text-center">
            <p class="text-xs leading-none font-normal text-gray-500 lg:text-[13px]">프로세스</p>
          </th>
          <th class="border-border-2 table-cell w-32 min-w-32 border-t border-b bg-gray-100 px-4 py-3 text-center">
            <p class="text-xs leading-none font-normal text-gray-500 lg:text-[13px]">CPU</p>
          </th>
          <th class="border-border-2 table-cell w-32 min-w-32 border-t border-b bg-gray-100 px-4 py-3 text-center">
            <p class="text-xs leading-none font-normal text-gray-500 lg:text-[13px]">메모리</p>
          </th>
          <th class="border-border-2 table-cell w-32 min-w-32 border-t border-b bg-gray-100 px-4 py-3 text-center">
            <p class="text-xs leading-none font-normal text-gray-500 lg:text-[13px]">가동시간</p>
          </th>
        </tr>
      </thead>
      <tbody>
        <tr class="border-border-2 border-b">
          <td class="px-4 py-3 text-center">
            <span id="process-status" class="text-gray-700">-</span>
          </td>
          <td class="px-4 py-3 text-center">
            <span id="cpu-status" class="text-gray-700">-</span>
          </td>
          <td class="px-4 py-3 text-center">
            <span id="memory-status" class="text-gray-700">-</span>
          </td>
          <td class="px-4 py-3 text-center">
            <span id="uptime" class="text-gray-700">-</span>
          </td>
        </tr>
      </tbody>
    </table>
  </div>

  <div
    id="system-status-message-container"
    class="mt-4 flex hidden items-center gap-2 rounded-lg bg-red-50 px-4 py-2 text-[13px] text-red-500 lg:mt-6"
  >
    <%- include('../../common/icons/exclamation') %>
    <p id="system-status-message"></p>
  </div>
</div>
