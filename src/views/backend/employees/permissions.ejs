<div class="block pt-2 mb-2">
  <h1 class='flex justify-self-start items-center gap-1.5 py-2 text-center text-slate-700 transition-all'>
    <span class="font-bold text-xl"><%=title%></span>
  </h1>
</div>
<form id="formEmployeePermissions">
  <div class="space-y-4 text-sm bg-white p-4 mb-4 lg:p-6 rounded-xl shadow-[0_2px_30px_rgba(0,0,0,.06)]">
    <ul class="space-y-1.5">
      <% data.permissions.forEach((permission, index) => { %>
        <li class="flex items-center gap-1">
          <input 
            type="checkbox" 
            id="permission<%=index%>" 
            name="permission" 
            class="w-3 h-3 text-blue-500 border border-gray-300 rounded focus:outline-none cursor-pointer" 
            value="<%=permission.id%>" 
            <%= data.employee.permissions.includes(permission.id) ? 'checked' : '' %>
          >
          <label for="permission<%=index%>" class="text-gray-700 cursor-pointer"><%=permission.title%></label>
        </li>
      <% }); %>
      </ul>
    </div>
    <div class="text-right">
      <button type="submit" class="orb-btn-primary">
        저장
      </button>
    </div>
  </form>

<script>
  document.getElementById('formEmployeePermissions').addEventListener('submit', async function(e) {
    e.preventDefault();

    const permissions = Array.from(document.querySelectorAll('input[name="permission"]:checked')).map(checkbox => checkbox.value);

    const data = { permissions };

    try {
      // 권한 부여 API 호출
      const apiUrl = '<%=apiBackendRoutes.employeesPermissions.url%>'.replace(':employeeId', '<%=data.employee.id%>');
      const response = await fetch(apiUrl, {
        method: '<%=apiBackendRoutes.employeesPermissions.method%>',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify(data)
      });

      // 응답 오류
      if (!response.ok) {
        const errorData = await response.json();
        throw new Error(errorData.message || response.statusText);
      }
      
      // 응답 성공
      alert('<%=apiBackendRoutes.employeesPermissions.title%> 성공');
      
    } catch (err) {
      alert(error.message || '서버 오류가 발생했습니다.');
        
    }
  });
</script>