        </li>
      <% }); %>
      </ul> -->
    </div>
    <div class="text-right">
      <button type="submit" class="orb-btn-primary">
        저장
      </button>
    </div>
  </form>

<script>
  document.getElementById('formEmployeePermissions').addEventListener('submit', async function(e) {
    e.preventDefault();

    const permissions = Array.from(document.querySelectorAll('input[name="permission"]:checked')).map(checkbox => checkbox.value);

    const data = { permissions };

    try {
      // 권한 부여 API 호출
      const apiUrl = '<%=apiBackendRoutes.employeePermissions.url%>'.replace(':employeeId', '<%=data.employee.id%>');
      const response = await fetch(apiUrl, {
        method: '<%=apiBackendRoutes.employeePermissions.method%>',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify(data)
      });

      // 응답 오류
      if (!response.ok) {
        const errorData = await response.json();
        throw new Error(errorData.message || response.statusText);
      }
      
      // 응답 성공
      alert('<%=apiBackendRoutes.employeePermissions.title%> 성공');
      
    } catch (err) {
      alert(error.message || '서버 오류가 발생했습니다.');
        
    }
  });
</script>