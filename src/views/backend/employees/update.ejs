<div class="block pt-2 mb-2">
  <h1 class='flex justify-between items-baseline gap-1.5 py-2 text-center text-slate-700 transition-all'>
    <span class="font-bold text-xl"><%=title%></span>
    <p class="text-right font-medium text-[13px] text-gray-400"><span class="pr-0.5 text-red-500">*</span>필수입력사항</p>
  </h1>
</div>
<form id="formEmployeeModify">
  <div class="space-y-4 text-sm text-gray-800 bg-white p-4 mb-4 lg:p-6 rounded-xl shadow-[0_2px_30px_rgba(0,0,0,.06)]">
    <div>
      <label for="email" class="block flex-none mb-2 font-medium text-[13px] text-gray-400">이메일<span class="pl-0.5 text-red-500">*</span></label>
      <p class="w-full px-4 py-3  rounded-lg bg-gray-100 placeholder:text-sm placeholder:text-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500"><%=data.employee.email%></p>
    </div>
    
    <div>
      <label for="name" class="block flex-none mb-2 font-medium text-[13px] text-gray-400">이름<span class="pl-0.5 text-red-500">*</span></label>
      <input type="text" id="name" name="name" class="w-full px-4 py-3 rounded-lg bg-gray-100 placeholder:text-sm placeholder:text-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500" value="<%=data.employee.name%>" placeholder="이름을 입력해주세요." required>
    </div>
    
    <div>
      <label for="phone" class="block flex-none mb-2 font-medium text-[13px] text-gray-400">전화번호</label>
      <input type="text" id="phone" name="phone" class="w-full px-4 py-3 rounded-lg bg-gray-100 placeholder:text-sm placeholder:text-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500" value="<%=data.employee.phone%>" placeholder="전화번호를 입력해주세요.">
    </div>
    
    <div>
      <label for="mobile" class="block flex-none mb-2 font-medium text-[13px] text-gray-400">휴대전화</label>
      <input type="text" id="mobile" name="mobile" class="w-full px-4 py-3 rounded-lg bg-gray-100 placeholder:text-sm placeholder:text-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500" value="<%=data.employee.mobile%>" placeholder="휴대전화 번호를 입력해주세요.">
    </div>
    
    <div>
      <label for="address" class="block flex-none mb-2 font-medium text-[13px] text-gray-400">주소</label>
      <input type="text" id="address" name="address" class="w-full px-4 py-3 rounded-lg bg-gray-100 placeholder:text-sm placeholder:text-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500" value="<%=data.employee.address%>" placeholder="주소를 입력해주세요.">
    </div>
    
    <div>
      <label for="birthDate" class="block flex-none mb-2 font-medium text-[13px] text-gray-400">생년월일</label>
      <input type="date" id="birthDate" name="birthDate" class="w-full px-4 py-3 rounded-lg bg-gray-100 placeholder:text-sm placeholder:text-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500" value="<%=data.employee.birthDate%>">
    </div>
    
    <div>
      <label for="position" class="block flex-none mb-2 font-medium text-[13px] text-gray-400">직급</label>
      <input type="text" id="position" name="position" class="w-full px-4 py-3 rounded-lg bg-gray-100 placeholder:text-sm placeholder:text-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500" value="<%=data.employee.position%>" placeholder="직급을 입력해주세요.">
    </div>
    
    <div>
      <label for="description" class="block flex-none mb-2 font-medium text-[13px] text-gray-400">설명</label>
      <input type="text" id="description" name="description" class="w-full px-4 py-3 rounded-lg bg-gray-100 placeholder:text-sm placeholder:text-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500" value="<%=data.employee.description%>" placeholder="설명을 입력해주세요.">
    </div>

    <div class="flex gap-3 lg:gap-4">
      <div class="flex-1">
        <label for="hireDate" class="block flex-none mb-2 font-medium text-[13px] text-gray-400">입사일</label>
        <input type="date" id="hireDate" name="hireDate" class="w-full px-4 py-3 rounded-lg bg-gray-100 placeholder:text-sm placeholder:text-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500" value="<%=data.employee.hireDate%>">
      </div>
      
      <div class="flex-1">
        <label for="hireDate" class="block flex-none mb-2 font-medium text-[13px] text-gray-400">퇴사일</label>
        <input type="date" id="fireDate" name="fireDate" class="w-full px-4 py-3 rounded-lg bg-gray-100 placeholder:text-sm placeholder:text-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500" value="<%=data.employee.fireDate%>">
      </div>
    </div>
  </div>

  <div class="text-right">
    <button type="submit" class="orb-btn-primary">
      수정
    </button>
  </div>
</form>

<script>
  document.getElementById('formEmployeeModify').addEventListener('submit', async function(event) {
      event.preventDefault();

      // 폼 데이터 수집
      const formData = new FormData(this);

      // 폼 데이터 변환
      const data = {};
      formData.forEach((value, key) => {
          data[key] = value;
      });

      try {
        // 직원 수정 API 호출
        const apiUrl = '<%=apiBackendRoutes.employeeUpdate.url%>'.replace(':employeeId', '<%=data.employee.id%>');
        const response = await fetch(apiUrl, {
          method: '<%=apiBackendRoutes.employeeUpdate.method%>',
          headers: {
              'Content-Type': 'application/json'
          },
          body: JSON.stringify(data)
        });

        // 응답 오류
        if (!response.ok) {
          const errorData = await response.json();
          throw new Error(errorData.message || response.statusText);
        }
        
        // 응답 성공
        alert('<%=apiBackendRoutes.employeeUpdate.title%> 성공');
          
      } catch (err) {
        alert(error.message || '서버 오류가 발생했습니다.');
          
      }
  });
</script>

