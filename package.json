{
  "name": "express_base",
  "version": "1.0.0",
  "main": "src/app.ts",
  "scripts": {
    "dev": "concurrently \"nodemon\" \"npm run sass\" \"npm run tailwind:build\"",
    "build": "tsc && npm run tailwind:build && npm run copy-files",
    "start": "node dist/app.js",
    "sass": "sass --watch src/styles:public/css",
    "tailwind:build": "npx @tailwindcss/cli -i src/styles/tailwind.css -o public/css/tailwind.css --watch",
    "copy-files": "cp -R src/views dist/views && cp -R public dist/static"
  },
